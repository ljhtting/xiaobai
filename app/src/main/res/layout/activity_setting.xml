<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    tools:context="com.xiaobai.activity.SettingActivity">

    <include
        android:id="@+id/main_title"
        layout="@layout/view_title" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="32dp"
        android:background="#f9f9f9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_avatar"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="个人信息"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="42dp"
        android:background="#f3f3f3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_password"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="密码"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#f3f3f3" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="32dp"
        android:background="#f3f3f3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_watermark"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="水印"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="42dp"
        android:background="#f3f3f3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_clear"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="清理缓存"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#f3f3f3" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="32dp"
        android:background="#f3f3f3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_about"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="关于小白"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="42dp"
        android:background="#f3f3f3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_feedback"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="意见反馈"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="42dp"
        android:background="#f3f3f3" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/setting_share"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/setting_avatar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="分享小白给朋友"
        android:textSize="14sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#f3f3f3" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="退出"
        android:background="@drawable/bg_log_out"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
