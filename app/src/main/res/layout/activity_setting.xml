<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical"
    tools:context="com.xiaobai.activity.SettingActivity">

    <include
        android:id="@+id/main_title"
        layout="@layout/view_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="32dp"
        android:background="@color/pull_view_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_avatar"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="个人信息"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="42dp"
            android:background="@color/pull_view_text" />

        <TextView
            android:id="@+id/setting_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_password"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="密码"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/pull_view_text" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="32dp"
        android:background="@color/pull_view_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_watermark"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="水印"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="42dp"
            android:background="@color/pull_view_text" />

        <TextView
            android:id="@+id/setting_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_clear"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="清理缓存"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/pull_view_text" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="32dp"
        android:background="@color/pull_view_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_about"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="关于小白"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="42dp"
            android:background="@color/pull_view_text" />

        <TextView
            android:id="@+id/setting_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_feedback"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="意见反馈"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="42dp"
            android:background="@color/pull_view_text" />


        <TextView
            android:id="@+id/setting_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableLeft="@drawable/setting_share"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_right"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:padding="8dp"
            android:text="分享小白给朋友"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/pull_view_text" />

    <Button
        android:id="@+id/setting_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_log_out"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="5dp"
        android:text="退出"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
