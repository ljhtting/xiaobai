<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="#303069"
        card_view:cardElevation="24dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a04940"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_name_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="一点点"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_age_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_lable"
                android:layout_marginTop="8dp"
                android:text="年龄"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_lable"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_sex_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_age_lable"
                android:layout_marginTop="8dp"
                android:text="性别"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_age"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_height_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sex_lable"
                android:layout_marginTop="8dp"
                android:text="身高"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sex_lable"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_home_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_height"
                android:layout_marginTop="8dp"
                android:text="故乡"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_height"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_wechat_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home"
                android:layout_marginTop="8dp"
                android:text="微信"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_home"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_work_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wechat_lable"
                android:layout_marginTop="8dp"
                android:text="职业"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_wechat"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_love_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_work_lable"
                android:layout_marginTop="8dp"
                android:text="爱好"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_work"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_name_lable"
                android:text="--"
                android:textColor="@color/white" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>